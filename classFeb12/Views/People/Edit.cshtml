@using classFeb12.Models
@model EditPersonViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <form action="/people/update" method="post">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <input type="text" placeholder="First Name" name="firstName" class="form-control" value="@Model.person.FirstName" />
                </div>
                <div class="col-md-6 offset-md-3 mt-2">
                    <input type="text" placeholder="Last Name" name="lastName" class="form-control" value="@Model.person.LastName"/>
                </div>
                <div class="col-md-6 offset-md-3 mt-2">
                    <input type="text" placeholder="Age" name="age" class="form-control" value="@Model.person.Age"/>
                </div>
                <input type="hidden" name="id" value="@Model.person.Id" />
                <div class="col-md-6 offset-md-3 mt-2">
                    <button class="btn btn-success w-100">Update</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
